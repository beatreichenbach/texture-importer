{
    "name": "Arnold (3dsMax)",
    "renderer": "arnold",
    "channels": [
        {
            "attribute": "base_color",
            "pattern": "$material_BaseColor(.$udim).*",
            "colorspace": "sRGB"
        },
        {
            "attribute": "metalness",
            "pattern": "$material_Metalness(.$udim).*",
            "colorspace": "linear"
        },
        {
            "attribute": "specular_roughness",
            "pattern": "$material_Roughness(.$udim).*",
            "colorspace": "linear"
        },
        {
            "attribute": "normal",
            "pattern": "$material_Normal(.$udim).*",
            "colorspace": "linear"
        },
        {
            "attribute": "displacement",
            "pattern": "$material_Height(.$udim).*",
            "colorspace": "linear"
        },
        {
            "attribute": "emission_color",
            "pattern": "$material_Emissive(.$udim).*",
            "colorspace": "sRGB"
        }
    ]
}